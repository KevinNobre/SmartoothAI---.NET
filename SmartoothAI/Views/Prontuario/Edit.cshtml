@model SmartoothAI.Domain.Entities.Prontuario

<h2>Editar Prontuário</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="ProntuarioId"></label>
        <input asp-for="ProntuarioId" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Prescricao"></label>
        <input asp-for="Prescricao" class="form-control" />
        <span asp-validation-for="Prescricao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Observacoes"></label>
        <input asp-for="Observacoes" class="form-control" />
        <span asp-validation-for="Observacoes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataRegistro"></label>
        <input asp-for="DataRegistro" class="form-control" type="date" />
        <span asp-validation-for="DataRegistro" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
