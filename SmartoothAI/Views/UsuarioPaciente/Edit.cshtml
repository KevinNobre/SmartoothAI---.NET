@model SmartoothAI.Application.DTOs.UsuarioPacienteDTO

<h2>Editar Paciente</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PacienteId" />
    <div class="form-group">
        <label>Nome</label>
        <input asp-for="Nome" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Sobrenome</label>
        <input asp-for="Sobrenome" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
<a href="/UsuarioPaciente" class="btn btn-secondary">Voltar</a>