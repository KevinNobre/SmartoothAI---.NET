@model SmartoothAI.Application.DTOs.UsuarioPacienteDTO

<h2>Cadastrar Paciente</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Nome</label>
        <input asp-for="Nome" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Sobrenome</label>
        <input asp-for="Sobrenome" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" type="email" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Data de Nascimento</label>
        <input asp-for="DataNasc" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label>Gênero</label>
        <select asp-for="Genero" class="form-control">
            <option value="Masculino">Masculino</option>
            <option value="Feminino">Feminino</option>
            <option value="Outro">Outro</option>
        </select>
    </div>
    <div class="form-group">
        <label>CEP</label>
        <input asp-for="Cep" class="form-control" />
    </div>
    <div class="form-group">
        <label>Logradouro</label>
        <input asp-for="Logradouro" class="form-control" />
    </div>
    <div class="form-group">
        <label>Número</label>
        <input asp-for="Numero" class="form-control" />
    </div>
    <div class="form-group">
        <label>Complemento</label>
        <input asp-for="Complemento" class="form-control" />
    </div>
    <div class="form-group">
        <label>Bairro</label>
        <input asp-for="Bairro" class="form-control" />
    </div>
    <div class="form-group">
        <label>Cidade</label>
        <input asp-for="Cidade" class="form-control" />
    </div>
    <div class="form-group">
        <label>UF</label>
        <input asp-for="Uf" class="form-control" />
    </div>
    <div class="form-group">
        <label>Contato</label>
        <input asp-for="Contato" class="form-control" />
    </div>
    <div class="form-group">
        <label>Pontos</label>
        <input asp-for="Pontos" type="number" class="form-control" />
    </div>
    <div class="form-group">
        <label>Descontos</label>
        <input asp-for="Descontos" type="number" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
</form>
<a href="/UsuarioPaciente" class="btn btn-secondary">Voltar</a>
