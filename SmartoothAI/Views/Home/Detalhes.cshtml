@model SmartoothAI.WebAPI.Models.PacienteDetalhesViewModel

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prontuário do Paciente - SmartoothAI</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

    <div class="container mt-5">
        <h2>Prontuário do Paciente</h2>
        <div class="card p-3 shadow">
            <h3 class="text-primary">@Model.Nome</h3>
            <p><strong>Idade:</strong> @Model.Idade anos</p>
            <p><strong>Plano:</strong> @Model.Plano</p>
            <p><strong>Histórico:</strong> @Model.Historico</p>
        </div>

        <a href="@Url.Action("Atendimento", "Home")" class="btn btn-secondary mt-3">Voltar para Atendimento</a>
    </div>

</body>
</html>
