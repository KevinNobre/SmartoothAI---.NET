@{
    ViewData["Title"] = "Home Page";
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="jumbotron">
    <h1 class="display-4">SmartoothAI</h1>
    <img src="~/css/Smartooth logo.png" alt="Logo Image" class="image" width="300" height="300" />

</div>
<div class="login">
    <form method="post" asp-controller="Home" asp-action="Login">
        <div class="form-group">
            <label for="Usuario">Usuário</label>
            <input type="text" class="form-control" id="Usuario" name="Usuario" required />
        </div>

        <div class="form-group">
            <label for="Senha">Senha</label>
            <input type="password" class="form-control" id="Senha" name="Senha" required />
        </div>

        <button type="submit" class="btn btn-primary">Entrar</button>
        <hr />
        <div style="width: 100%; height: 100%; color: black; font-size: 16px; font-family: Inter; font-weight: 400; word-wrap: break-word">Primeiro acesso? <a asp-action="Registro">Clique Aqui.</a></div>
    </form>

</div>
